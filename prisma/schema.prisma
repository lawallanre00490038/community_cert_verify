generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = "mongodb+srv://link:link@cluster0.rujz1et.mongodb.net/Cluster0?retryWrites=true&w=majority"
}

model User {
  id                     String @id @default(auto()) @map("_id") @db.ObjectId
  email                  String               @unique
  name                   String?
  role                   Role?                @default(admin)
  password               String
  createdAt              DateTime?            @default(now())
  phone                  String?
  updatedAt              DateTime?            @updatedAt
}

enum Role {
  superadmin
  admin
}

model Student_Certificate {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  certificateID     String
  studentID         String
  name              String
  email             String
  certificationName String
  link              String?
  issuedBy          String
  issuedDate        String?
  createdAt              DateTime?            @default(now())
  updatedAt              DateTime?            @updatedAt
}
